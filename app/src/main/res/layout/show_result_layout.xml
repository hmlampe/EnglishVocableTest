<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/correct_translated"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/resultPositivView"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:autofillHints="@string/correct_translated"
            android:inputType="text"
            android:hint="@string/correct_translated"
            android:textColor="#009688"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="48dp"
            android:text="@string/wrong_translated"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/resultNegativeView"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:autofillHints="@string/wrong_translated"
            android:inputType="text"
            android:hint="@string/wrong_translated"
            android:textColor="#E91E63"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>