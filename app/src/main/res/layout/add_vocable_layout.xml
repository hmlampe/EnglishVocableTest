<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/resultPositivView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:autofillHints="@string/word_in_german"
        android:height="48dp"
        android:hint="@string/word_in_german"
        android:inputType="text"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:background="@color/cardview_dark_background" />

    <EditText
        android:id="@+id/resultNegativeView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:autofillHints="@string/word_in_english"
        android:height="48dp"
        android:hint="@string/word_in_english"
        android:inputType="text"
        android:textSize="20sp"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:background="@color/cardview_dark_background" />
</LinearLayout>